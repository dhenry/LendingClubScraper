<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dhenry.lendingclubscraper.app" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.AccountOverviewActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name=".view.AccountDetailsActivity"
            android:label="@string/app_name" >
        </activity>

        <provider android:name="com.dhenry.lendingclubscraper.app.provider.AccountSummaryProvider"
            android:exported="true"
            android:enabled="true"
            android:authorities="com.dhenry.lendingclubscraper.lendingclubprovider"> </provider>

    </application>

</manifest>
